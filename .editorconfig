# EditorConfig: http://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitetab = true
insert_final_newline = true

[*.md]
trim_trailing_whitetab = false

[*.js]
indent_style = tab
indent_size = 2

[Gruntfile.js]
indent_style = tab
indent_size = 2

[grunt/*.js]
indent_style = tab
indent_size = 2

[*.json]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 4
